import os
import pandas as pd
import matplotlib.pyplot as plt
from sklearn.datasets import load_breast_cancer
from sdv.single_table import GaussianCopulaSynthesizer
from sdv.metadata import SingleTableMetadata

os.makedirs("figures", exist_ok=True)

# --- Load dataset ---
data = load_breast_cancer(as_frame=True)
df = data.frame
df['target'] = data.target
print("Original data shape:", df.shape)

# --- Detect metadata ---
metadata = SingleTableMetadata()
metadata.detect_from_dataframe(data=df)

# --- Train synthesizer ---
synthesizer = GaussianCopulaSynthesizer(metadata)
synthesizer.fit(df)

# --- Generate synthetic samples ---
synthetic_data = synthesizer.sample(num_rows=500)
print("Synthetic data shape:", synthetic_data.shape)

# --- Plot comparison ---
fig, axes = plt.subplots(2, 3, figsize=(12,6))
for i, col in enumerate(df.columns[:6]):
    r, c = divmod(i, 3)
    axes[r][c].hist(df[col], bins=20, alpha=0.6, label="Real")
    axes[r][c].hist(synthetic_data[col], bins=20, alpha=0.6, label="Synthetic")
    axes[r][c].set_title(col)
plt.legend()
plt.tight_layout()
plt.savefig("figures/synthetic_comparison_sdv.png", dpi=120)
plt.show()
